<% unless @user.quotes.include?(index_quote) %>
    <div class="transbox">
        <h3>
            "
            <% index_quote.split_quote_array.each do |word| %>
                <% if Quote.normal_word(word) != nil %>
                    <%= link_to word, word_definition_path(:controller => 'quotes', :action => 'define', :method => 'get', :quote_id => index_quote.id, :word_query => Quote.normal_word(word)) %>
                <% else %>
                    <%= word %>
                <% end %>
            <% end %>
            " - <%= index_quote.author %>
        </h3><br><br>
        <%= button_to "Add to Favorites", :controller => 'users', :action => 'add_to_user_favorites', :method => 'post', :quote_id => index_quote.id %>
    </div>
<% end %>
